<p>Turns left: <%= @tally.turns_left %></p>

<p>Letters already used: <%= @tally.already_used |> Enum.join(", ") %></p>

<p>Word so far: <%= @tally.letters |> Enum.join(" ") %></p>


<%= if game_over?(@tally) do %>
  <%= new_game_button(@conn) %>
<% else %>
  <%= form_for @conn, Routes.hangman_path(@conn, :update), [ method: :put ], fn f -> %>
    Name: <%= text_input f, :guess %>
    <%= submit "Make next move" %>
  <% end %>
<% end %>
